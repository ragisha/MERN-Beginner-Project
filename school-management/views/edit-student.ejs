<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  </head>
  <body>
    <script>
        var updateStudent = function(){
        var id = $("#id").val();
  			var name = $("#name").val();
        var email = $("#email").val();
        var phone = $("#phone").val();
  			var data = {id,name,email,phone};
        console.log(data);
  			$.ajax({
			    url : "/api/student",
			    type: "PUT",
			    data : data,
			    success: function(data, textStatus, jqXHR) {
          
			    	if(data.result == "success"){
			    		location = "/student";
			    	}
			    },
			    error: function (jqXHR, textStatus, errorThrown){
			    	alert("Unable to connect remote server..");
			    }
			});
  		}
    </script>
    <h1><%= title %></h1>
    <input id="id" type="" placeholder="id" name="" value="<%= student.id %>" readonly> <br/><br/>
    <input id="name" type="" placeholder="Name" name="" value="<%= student.name %>"> <br/><br/>
    <input id="email" type="" placeholder="Email" name="" value="<%= student.email %>"> <br/><br/>
    <input id="phone" type="" placeholder="Phone" name="" value="<%= student.phone %>"> <br/><br/>
    <input onclick="updateStudent()" type="button" value="Update">
  </body>
</html>