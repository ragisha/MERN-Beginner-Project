<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  </head>
  <body>
    <script>
        var addProduct = function(){
  			var name = $("#name").val();
        var company = $("#company").val();
        var date = $("#date").val();
        var city = $("#city").val();
        var country = $("#country").val();

  			var data = {name,company,date,city,country};
  			$.ajax({
			    url : "/api/product",
			    type: "POST",
			    data : data,
			    success: function(data, textStatus, jqXHR) {
			    	if(data.result == "success"){
			    		location = "/product";
			    	}
			    },
			    error: function (jqXHR, textStatus, errorThrown){
			    	alert("Unable to connect remote server..");
			    }
			});
  		}
    </script>
    <h1><%= title %></h1>
    <input id="name" type="" placeholder="Name" name=""> <br/><br/>
    <input id="company" type="" placeholder="Company" name=""> <br/><br/>
    <input id="date" type="" placeholder="Date" name=""> <br/><br/>
    <input id="city" placeholder="City" name=""> <br/><br/>
    <input id="country" placeholder="Country" name=""> <br/><br/>
    <input onclick="addProduct()" type="button" value="Add">
  </body>
</html>