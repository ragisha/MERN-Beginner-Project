<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  </head>
  <body>
    <script>
        var updateProduct = function(){
        var id = $("#id").val();
  			var name = $("#name").val();
        var company = $("#company").val();
        var date = $("#date").val();
        var city = $("#city").val();
        var country = $("#country").val();
  			var data = {id,name,company,date,city,country};
        console.log(data);
  			$.ajax({
			    url : "/api/product",
			    type: "PUT",
			    data : data,
			    success: function(data, textStatus, jqXHR) {
          
			    	if(data.result == "success"){
			    		location = "/product";
			    	}
			    },
			    error: function (jqXHR, textStatus, errorThrown){
			    	alert("Unable to connect remote server..");
			    }
			});
  		}
    </script>
    <h1><%= title %></h1>
    <input id="id" type="" placeholder="id" name="" value="<%= product.id %>" readonly> <br/><br/>
    <input id="name" type="" placeholder="Name" name="" value="<%= product.name %>"> <br/><br/>
    <input id="company" type="" placeholder="Company" name="" value="<%= product.company %>"> <br/><br/>
    <input id="date" type="" placeholder="Date" name="" value="<%= product.date %>"> <br/><br/>
    <input id="city" placeholder="City" name="" value="<%= product.city %>"> <br/><br/>
    <input id="country" placeholder="Country" name="" value="<%= product.country %>"> <br/><br/>
    <input onclick="updateProduct()" type="button" value="Update">
  </body>
</html>